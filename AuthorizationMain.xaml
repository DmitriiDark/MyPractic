<Window x:Class="Shadrin_new.AuthorizationMian"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shadrin_new"
        mc:Ignorable="d"
        Title="МЕНЮ АВТОРИЗАЦИИ" Height="400" Width="350">
    <Grid Margin="0,0,0,-16">

        <Label x:Name="Label1" Content="Введите логин" HorizontalAlignment="Center" Height="40"
Margin="0,60,0,0" VerticalAlignment="Top"></Label>
        <Label x:Name="Label2" Content="Введите пароль" HorizontalAlignment="Center" Height="43"
Margin="0,150,0,0" VerticalAlignment="Top">
        </Label>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Center" Height="33" Width="250"
Margin="0,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top"></TextBox>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Center" Height="33" Width="250"
Margin="0,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top"></TextBox>
        <Button x:Name="button1" Content="Войти" HorizontalAlignment="Center" Height="45" Width="90"
Margin="0,250,0,0" VerticalAlignment="Top" Click="Button1_Click" >
        </Button>
        <Label x:Name="Label3" Content="Авторизация" HorizontalAlignment="Center" Height="40"
            Margin="0,4,0,0" VerticalAlignment="Top" Background="White" FontFamily="Arial Black"/>
        <Button x:Name="button2" Content="Закрыть" HorizontalAlignment="Center" Height="45" Width="90"
            Margin="0,310,0,0" VerticalAlignment="Top" Click="Button2_Click" />
    </Grid>
</Window>
